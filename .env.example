# Database Configuration
DATABASE_URL=sqlite:///./app.db
# For PostgreSQL use: postgresql://user:password@localhost:5432/dbname
# For MySQL use: mysql+pymysql://user:password@localhost:3306/dbname

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

BCRYPT_ROUNDS=10

# Chatbot Rate Limiting
CHATBOT_QUERY_LIMIT=5
CHATBOT_QUERY_WINDOW_HOURS=24

# LangSmith Configuration
export LANGSMITH_TRACING=true
export LANGSMITH_API_KEY=lsv2_xxx
